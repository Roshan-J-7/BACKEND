      "essential": true,
      "environment": [
        {
          "name": "CEREBRAS_API_KEY",
          "value": "csk-fe8ntvvnx6d8rvnky45dhp5y8j6et5kffy4pcy84kr8264ew"
        },
        {
          "name": "CHATBOT_CEREBRAS_API_KEY",
